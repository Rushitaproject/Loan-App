<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:layout_margin="@dimen/_10sdp"
    cardview:strokeWidth="@dimen/_2sdp"
    cardview:strokeColor="@color/colorPrimary"
    cardview:cardCornerRadius="@dimen/_20sdp"
    android:elevation="@dimen/_10sdp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/exitItemOne"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:fontFamily="@font/generalsans_bold"
            android:gravity="center"
            android:background="@drawable/ic_exit"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_margin="@dimen/_10sdp"
            android:id="@+id/exitItemTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/generalsans_semibold"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/_4sdp"
            android:text="@string/want_to_exit"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toBottomOf="@id/exitItemOne" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/generalsans_medium"
            android:text="No"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_14ssp"
            cardview:cornerRadius="@dimen/_10sdp"
            cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintEnd_toStartOf="@+id/btn_yes"
            cardview:layout_constraintHorizontal_bias="0.5"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toBottomOf="@id/exitItemTwo"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/generalsans_medium"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:text="Yes"
            cardview:strokeColor="@color/colorPrimary"
            cardview:strokeWidth="@dimen/_1sdp"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_14ssp"
            cardview:cornerRadius="@dimen/_10sdp"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintHorizontal_bias="0.5"
            cardview:layout_constraintStart_toEndOf="@+id/btn_no"
            cardview:layout_constraintTop_toBottomOf="@id/exitItemTwo"
            cardview:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
